<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sparta MyBlog</title>

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />

    <!--Mystyle.css-->
    <link href="/mystyle.css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.min.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Nanum+Gothic&display=swap"
      rel="stylesheet"
    />
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
    <script type="text/javascript" src="/views/javascripts/api.js"></script>
    
    <style>
      tr.highlight > td {
        background-color: red;
        color: white;
      }

      tr.highlight > td > a {
        color: white;
      }

      .table {
        width: 100%;
        max-width: 1200px;
        margin: auto;
        table-layout: fixed;
        /*text-align: center;*/
      }

      .table th {
        border-top-style: none;
      }

      td {
        background-color: white;
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;
      }

      td > a,
      a:visited,
      a:hover,
      a:active {
        color: black;
      }

      thead:first-child tr:first-child th:first-child {
        border-radius: 10px 0 0 0;
      }

      thead:first-child tr:first-child th:last-child {
        border-radius: 0 10px 0 0;
      }

      tbody:last-child tr:last-child td:first-child {
        border-radius: 0 0 0 10px;
      }

      tbody:last-child tr:last-child td:last-child {
        border-radius: 0 0 10px 0;
      }

      #article_write {
        height: 50px;
        width: 100px;
        position: absolute;
        right: 0px;
        bottom: 0px;
      }

      #login{
        float: right;
        margin-right: 10px;
      }
      
      #sign_out{
        float: right;
        margin-right: 10px;
      }

      #login_user{
        float:right;
        margin-right: 10px;
      }
 
      a:link {
        color : black;
      }
    </style>

    <script>
      let user=null;
      $(document).ready(function () {
 
        $.ajax({
          type: "GET",
          url: "/users/me",
          headers: {
            authorization: `Bearer ${localStorage.getItem("token")}`,
          },
          success: function (response) {
            user=response.user;
            $("#login").hide();
            $('#login_user').text(user.username);
          },  
          error: function (error) {
            $("#sign_out").hide();
          },
        });
      });

      function to_articles() {
        if(user===null){
          alert('올바른 사용자가 아님');
          window.location.href='/login';
          return;
        }
        else window.location.href = "/api/articles_to";
      }

      function signOut() {
        alert('로그아웃');
        localStorage.clear();
        window.location.href = "/login";
      }


      function mypage(){
        alert('에라 모르겠다~');
      }
    </script>
  </head>
  <body>
    <div class="wrap">
      <div class="banner" onclick="window.location.href='/api/articles'">
      
        <a id = login href = '/login'>로그인</a>
        <a id = sign_out href="javascript:signOut();">로그아웃</a>
        <a id = login_user href="javascript:mypage()"></a>
      </div>

      <div class="floating">
        <button id="article_write" type="button" onclick="to_articles()" class="btn btn-outline-dark">
          <i class="fas fa-pencil-alt"></i> &nbsp;글쓰기
        </button>
      </div>


      <table id="table1" class="table">
        <thead class="thead-light">
          <tr>
            <th scope="col" style="width: 30%">Date</th>
            <th scope="col" style="width: 20%">username</th>
            <th scope="col" style="width: 50%">title</th>
          </tr>
        </thead>
        <tbody id="tbody-box">
          <% for(var i = 0; i < articles.length; i++){ %>
          <tr id="article-${i}" onclick="location.href = '/api/articles/<%= articles[i]._id%>?username='+user.username" >
            <td><%=articles[i].date%></td>
            <td><%=articles[i].username%></td>
            <td><%=articles[i].title%>  &nbsp;<span style="font-size: 15px;">[<%=articles[i].articles_cnt%>]</span> </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>
